<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/deleting_items">

        <SwitchPreferenceCompat
            android:key="key_pref_confirm_delete_todo_list"
            android:title="@string/confirm_todo_deletion"
            android:defaultValue="true" />

        <SwitchPreferenceCompat
            android:key="key_pref_confirm_delete_header"
            android:title="@string/confirm_header_deletion"
            android:defaultValue="true"/>

        <SwitchPreferenceCompat
            android:key="key_pref_confirm_delete_item"
            android:title="@string/confirm_item_deletion"
            android:defaultValue="true"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/database">

        <Preference
            android:key="key_pref_import_database"
            android:title="@string/import_database"
            android:summary="Import a database saved on your device"
            android:defaultValue="true"/>

        <Preference
            android:key="key_pref_export_database"
            android:title="@string/export_database"
            android:summary="Choose a custom location"
            android:defaultValue="true"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/widget">

        <SwitchPreferenceCompat
            android:key="key_pref_close_on_back"
            android:title="@string/close_on_back"
            android:summary="@string/close_on_back_summary"
            android:defaultValue="true"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/additional_info">

        <Preference
            android:key="key_pref_introduction"
            android:title="@string/introduction"
            android:defaultValue="true"/>

        <Preference
            android:key="key_pref_show_about"
            android:title="@string/about"
            android:defaultValue="true"/>
    </PreferenceCategory>

</PreferenceScreen>